<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_marginRight="23dp"
    android:background="#ffffff"
    tools:context="com.DesignQuads.AssistanceFinder.ProfileActivity"
    android:weightSum="1">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="24dp"
        android:lineSpacingExtra="8sp"
        android:text="@string/Welcome"
        android:textColor="#001a00"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:layout_weight="0.08"
        android:text="@string/username"
        android:textColor="#001a00"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="48dp" />

    <Button
        android:id="@+id/tag_btn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_alignEnd="@+id/tvUserName"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignRight="@+id/tvUserName"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="41dp"
        android:background="#00b300"
        android:elevation="0dp"
        android:fontFamily="sans-serif-condensed"
        android:text="TAG LOCATION"
        android:textSize="24sp" />

    <Button
        android:id="@+id/editTag_btn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_alignEnd="@+id/tag_btn"
        android:layout_alignLeft="@+id/tag_btn"
        android:layout_alignRight="@+id/tag_btn"
        android:layout_alignStart="@+id/tag_btn"
        android:layout_below="@+id/tag_btn"
        android:layout_marginTop="42dp"
        android:background="#007acc"
        android:fontFamily="sans-serif-condensed"
        android:text="EDIT TAGGED LOCATION"
        android:textSize="24sp" />

    <Button
        android:id="@+id/unTag_btn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_alignEnd="@+id/editTag_btn"
        android:layout_alignLeft="@+id/editTag_btn"
        android:layout_alignRight="@+id/editTag_btn"
        android:layout_alignStart="@+id/editTag_btn"
        android:layout_below="@+id/editTag_btn"
        android:layout_marginTop="44dp"
        android:background="#ff9900"
        android:fontFamily="sans-serif-condensed"
        android:text="UN-TAG LOCATION"
        android:textColor="#ffffff"
        android:textSize="24sp" />

    <Button
        android:id="@+id/logOut_btn"
        style="@android:style/Widget.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/unTag_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:elevation="0dp"
        android:fontFamily="sans-serif"
        android:text="Log out"
        android:textSize="18sp" />

</RelativeLayout>
